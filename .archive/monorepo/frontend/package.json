{
  "name": "frontend-isolated",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "start": "serve -s dist",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:integration": "vitest integration",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:dev": "playwright test dev-mode.spec.ts",
    "test:e2e:dev:debug": "playwright test dev-mode.spec.ts --debug",
    "test:e2e:prod": "SKIP_DEV_SERVERS=true playwright test"
  },
  "dependencies": {
    "@vitejs/plugin-react": "^4.3.4",
    "@vitejs/plugin-react-swc": "^3.8.0",
    "axios": "^1.7.9",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "serve": "^14.2.4",
    "typescript": "^5.3.3",
    "vite": "^6.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.19.0",
    "@playwright/test": "^1.41.2",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/axios": "^0.14.4",
    "@types/node": "^22.13.4",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vitest/ui": "^3.0.5",
    "eslint": "^9.19.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.18",
    "globals": "^15.14.0",
    "jsdom": "^26.0.0",
    "typescript-eslint": "^8.22.0",
    "vitest": "^3.0.5"
  },
  "engines": {
    "node": "18.x"
  }
}
